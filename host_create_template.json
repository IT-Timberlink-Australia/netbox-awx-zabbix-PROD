              {
                "jsonrpc": "2.0",
                "method": "host.create",
                "id": 2,
                "auth": "{{ _auth }}",
                "params": {
                  "host": "{{ _nb_name }}",
                  "name": "{{ _nb_visible }}",
                  "groups": {{ _zbx_groups_json | from_yaml | to_json }},
                  "templates": {{ _zbx_templates_json | from_yaml | to_json }},
                  "proxy_hostid": {{ (_proxy_id_int | int) if (_proxy_id_int | int) > 0 else 0 }},
                  "monitored_by": {{ 1 if (_proxy_id_int | int) > 0 else 0 }},
                  "tags": {{ _zbx_tags_json | from_yaml | to_json }},
                  "status": {{ _zbx_desired_status | default(1) }},
                  "interfaces": [
                    {
                      "type": {{ _iface_type | int }},
                      "main": 1,
                      "useip": 1,
                      "ip": "{{ _iface_ip }}",
                      "dns": "",
                      "port": "{{ _iface_default_ports[_iface_type] | default('10050') }}",
                      "details": {{ _iface_details | default({}) | to_json }}
                    }
                  ]
                }
              }
